<%- include('layouts/header') %>

<!-- Slider START -->
<div class="swiper-main-slider-fade swiper-container">
    <div class="swiper-wrapper">

        <% slider.forEach(i => {%>
        <!-- Slide  Start -->
        <div class="swiper-slide" style="background-image:url('uploads/<%= i.avatar %>');">
            <!-- <div class="medium-overlay"></div> -->
            <div class="container">
                <div class="slider-content left-holder">
                    <h2 class="animated fadeInDown">
                        <%= HeaderText[0].title %>
                    </h2>
                    <div class="row">
                        <div class="col-md-6 col-sm-12 col-12">
                            <p class="animated fadeInDown">
                                <%= HeaderText[0].description %>
                            </p>
                        </div>
                    </div>
                    <!-- <div class="animated fadeInUp mt-30">
            <a href="#contact" class="dark-button button-md">Контакт</a>
          </div> -->
                </div>
            </div>
        </div>
        <!-- Slide  End -->
        <%}) %>


    </div>
    <!-- Add Arrows -->
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
    <!-- Add Pagination -->
    <div class="swiper-pagination"></div>
</div>
<!-- Slider END -->


