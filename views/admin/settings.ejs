</head>

<body id="page-top">

    <nav class="navbar navbar-expand navbar-dark bg-dark static-top">

        <a class="navbar-brand mr-1" href="/admin-index">Admin Panel</a>

        <button class="btn btn-link btn-sm text-white order-1 order-sm-0" id="sidebarToggle" href="#">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Navbar Search -->
        <form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search for..." aria-label="Search"
                    aria-describedby="basic-addon2">
                <div class="input-group-append">
                    <button class="btn btn-primary" type="button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </form>

        <!-- Navbar -->
        <ul class="navbar-nav ml-auto ml-md-0">
            <li class="nav-item dropdown no-arrow">
                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-user-circle fa-fw"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                    <a class="dropdown-item" href="#">Settings</a>
                    <a class="dropdown-item" href="#">Activity Log</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="/login/logout" data-toggle="modal"
                        data-target="#logoutModal">Logout</a>
                </div>
            </li>
        </ul>

    </nav>

    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="sidebar navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/admin-users">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Users</span>
                </a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="/admin-settings">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Settings</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin-sale">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Sale</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin-orders">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Orders</span>
                </a>
            </li>
        </ul>

        <div id="content-wrapper">

            <div class="container-fluid">

                <!-- Breadcrumbs-->
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="#">Dashboard</a>
                    </li>
                    <li class="breadcrumb-item active">Settings</li>
                </ol>

                <!-- DataTables Example -->
                <div class="card mb-3">
                    <div class="card-header">
                        <i class="fas fa-table"></i>
                        Data Settings
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6">
                                <form action="/admin-settings/logo" method="POST" class="form-group mb-5"
                                    accept="image/x-png,image/gif,image/jpeg" enctype="multipart/form-data">
                                    <h4 class="mb-3">Logo</h4>
                                    <div class="form-group">
                                        <label for="">Choose logo</label>
                                        <input type="file" name="avatar">
                                    </div>
                                    <input type="hidden" value="<%=logo[0].id%>" name="id">
                                    <input type="hidden" name="_csrf" value="<%= csrf %>">
                                    <button type="submit" class="btn btn-primary">Change</button>
                                </form>
                            </div>
                            <div class="col-6">
                                <div class="logo">
                                    <img src="/uploads/<%= logo[0].avatar %>">
                                </div>

                            </div>
                        </div>



                        <form class="form-group mb-5 createService" action="/admin-settings/service" method="POST"
                            accept="image/x-png,image/gif,image/jpeg" enctype="multipart/form-data">
                            <h4 class="mb-3">Create service</h4>

                            <ul class="nav nav-tabs mt-5">
                                <li class="nav-item">
                                    <a class="nav-link active" data-toggle="tab" href="#hy1">HY</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="tab" href="#ru1">RU</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="tab" href="#en1">EN</a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div id="hy1" class="container tab-pane active mt-3">
                                    <div class="form-group">
                                        <label for="">Վերնագիր</label>
                                        <input type="text" class="form-control" name="titleHy">
                                    </div>
                                </div>
                                <div id="ru1" class="container tab-pane fade mt-3">
                                    <div class="form-group">
                                        <label for="">название</label>
                                        <input type="text" class="form-control" name="titleRu">
                                    </div>
                                </div>
                                <div id="en1" class="container tab-pane fade mt-3">
                                    <div class="form-group">
                                        <label for="">Title</label>
                                        <input type="text" class="form-control" name="titleEn">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="">Icon</label>
                                    <input type="file" name="avatar">
                                </div>
                                <div class="form-group">
                                    <input type="hidden" name="_csrf" value="<%= csrf %>">
                                    <button type="submit" class="btn btn-primary">Create</button>
                                </div>
                            </div>
                        </form>

                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Icon</th>
                                        <th>Title</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Icon</th>
                                        <th>Title</th>
                                        <th>Delete</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    <% service.forEach(item=> {%>
                                    <tr>
                                        <td><img src="/uploads/<%= item.avatar %>" style="width: 100px; height: 100px;">
                                        </td>
                                        <td><%= item.titleEn %> </td>
                                        <td>
                                            <form action="/admin-settings/delete" method="POST">
                                                <input type="hidden" name="id" value="<%= item.id %>">
                                                <input type="hidden" name="_csrf" value="<%= csrf %>">
                                                <button class="btn btn-danger">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                    <%}) %>

                                </tbody>
                            </table>
                        </div>

                        <hr>

                        <form class="form-group mb-5 mt-5 createService" action="/admin-settings/advantage"
                            method="POST" accept="image/x-png,image/gif,image/jpeg" enctype="multipart/form-data">
                            <h4 class="mb-3">Our advantage</h4>

                            <ul class="nav nav-tabs mt-5">
                                <li class="nav-item">
                                    <a class="nav-link active" data-toggle="tab" href="#hy2">HY</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="tab" href="#ru2">RU</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="tab" href="#en2">EN</a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div id="hy2" class="container tab-pane active mt-3">
                                    <div class="form-group">
                                        <label for="">Վերնագիր</label>
                                        <input type="text" class="form-control" name="titleHy">
                                    </div>
                                    <div class="form-group">
                                        <label for="">Նկարագրություն</label>
                                        <input type="text" class="form-control" name="descriptionHy">
                                    </div>
                                </div>
                                <div id="ru2" class="container tab-pane fade mt-3">
                                    <div class="form-group">
                                        <label for="">название</label>
                                        <input type="text" class="form-control" name="titleRu">
                                    </div>
                                    <div class="form-group">
                                        <label for="">Описание</label>
                                        <input type="text" class="form-control" name="descriptionRu">
                                    </div>
                                </div>
                                <div id="en2" class="container tab-pane fade mt-3">
                                    <div class="form-group">
                                        <label for="">Title</label>
                                        <input type="text" class="form-control" name="titleEn">
                                    </div>
                                    <div class="form-group">
                                        <label for="">Description</label>
                                        <input type="text" class="form-control" name="descriptionEn">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="">Image</label>
                                    <input type="file" name="avatar">
                                </div>
                                <div class="form-group">
                                    <input type="hidden" name="_csrf" value="<%= csrf %>">
                                    <button type="submit" class="btn btn-primary">Add</button>
                                </div>
                            </div>
                        </form>

                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Image</th>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Delete</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    <% advantage.forEach(item=> {%>
                                    <tr>
                                        <td><img src="/uploads/<%= item.avatar %>" style="width: 100px; height: 100px;">
                                        </td>
                                        <td><%= item.titleEn %> </td>
                                        <td><%= item.descriptionEn %></td>
                                        <td>
                                            <form action="/admin-settings/delete_advantage" method="POST">
                                                <input type="hidden" name="id" value="<%= item.id %>">
                                                <button class="btn btn-danger">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                    <%}) %>

                                </tbody>
                            </table>
                        </div>

                        <hr>

                        <form action="/admin-settings/about" method="POST" class="form-group mt-5 mb-5 createService"
                            accept="image/x-png,image/gif,image/jpeg" enctype="multipart/form-data">
                            <h4 class="mb-3">About</h4>
                            <div class="form-group">
                                <label for="">Title</label>
                                <input type="text" class="form-control" name="title" value="<%=about[0].title%>">
                            </div>
                            <div class="form-group">
                                <label for="">Information</label>
                                <textarea class="form-control" name="info"><%=about[0].info%></textarea>
                            </div>
                            <div class="form-group">
                                <label for="">Image</label>
                                <input type="file" name="avatar">
                            </div>
                            <div class="form-group">
                                <input type="hidden" value="<%=about[0].id%>" name="id">
                                <input type="hidden" name="_csrf" value="<%= csrf %>">
                                <button type="submit" class="btn btn-primary">Change</button>
                            </div>

                        </form>

                        <hr>

                        <form class="form-group mb-5 mt-5" action="/admin-settings/contact" method="POST">
                            <h4 class="mb-3">Contact</h4>
                            <div class="form-group">
                                <label for="">Phone</label>
                                <input type="text" class="form-control" name="phone" value="<%= contact[0].phone %>">
                            </div>
                            <div class="form-group">
                                <label for="">Email</label>
                                <input type="text" class="form-control" name="email" value="<%= contact[0].email %>">
                            </div>
                            <div class="form-group">
                                <label for="">Working hours</label>
                                <div>
                                    <textarea class="contact_textarea"
                                        name="workingHourse"><%= contact[0].workingHourse %></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="instagram" placeholder="Instagram"
                                    value="<%= contact[0].instagram %>">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="facebook" placeholder="Facebook"
                                    value="<%= contact[0].facebook %>">
                            </div>
                            <div class="form-group">
                                <input type="hidden" value="<%=contact[0].id%>" name="id">
                                <input type="hidden" name="_csrf" value="<%= csrf %>">
                                <button type="submit" class="btn btn-primary">Update</button>
                            </div>
                        </form>


                        <hr>

                        <form action="/admin-settings/slider" method="POST" accept="image/x-png,image/gif,image/jpeg"
                            enctype="multipart/form-data">
                            <h4 class="mb-3">Header slider</h4>
                            <div class="form-group">
                                <label for="">Choose image</label>
                                <input type="file" name="avatar">
                            </div>
                            <div class="form-group">
                                <input type="hidden" name="_csrf" value="<%= csrf %>">
                                <button type="submit" class="btn btn-primary">Add</button>
                            </div>
                        </form>

                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Image</th>
                                        <th>Delete</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    <% slider.forEach(item=> {%>
                                    <tr>
                                        <td><img src="/uploads/<%= item.avatar %>" style="width: 200px; height: 200px;">
                                        </td>
                                        <td>
                                            <form action="/admin-settings/sliderDelete" method="POST">
                                                <input type="hidden" name="id" value="<%= item.id %>">
                                                <button class="btn btn-danger">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                    <%}) %>

                                </tbody>
                            </table>
                        </div>

                        <hr>

                        <form action="/admin-settings/header" method="POST" class="form-group mb-5 mt-5">
                            <h4 class="mb-3">Header > Slider > Text</h4>
                            <div class="form-group">
                                <label for="">Title</label>
                                <input type="text" class="form-control" name="title" value="<%= HeaderText[0].title %>">
                            </div>
                            <div class="form-group">
                                <label for="">Description</label>
                                <input type="text" class="form-control" name="description"
                                    value="<%= HeaderText[0].description %>">
                            </div>
                            <div class="form-group">
                                <input type="hidden" name="id" value="<%= HeaderText[0].id %>">
                                <input type="hidden" name="_csrf" value="<%= csrf %>">
                                <button type="submit" class="btn btn-primary">Change</button>
                            </div>
                        </form>

                        <form action="/admin-settings/category" method="POST" class="form-group mb-5 mt-5">
                            <h4 class="mb-3">Categories</h4>
                            <div class="form-group">
                                <label for="">All Categories</label>
                                <ul>
                                    <% category.forEach(i => {%>
                                    <li>
                                        <small><%= i.categoryHy %></small>,
                                        &nbsp; <small><%= i.categoryRu %></small>,
                                        &nbsp; <small><%= i.categoryEn %></small>
                                    </li>
                                    <%}) %>
                                </ul>
                            </div>
                            <ul class="nav nav-tabs mt-5">
                                <li class="nav-item">
                                    <a class="nav-link active" data-toggle="tab" href="#hy">HY</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="tab" href="#ru">RU</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="tab" href="#en">EN</a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div id="hy" class="container tab-pane active mt-3">
                                    <div class="form-group">
                                        <label for="">Ավելացնել կատեգորիա</label>
                                        <input type="text" class="form-control" name="categoryHy">
                                    </div>
                                </div>
                                <div id="ru" class="container tab-pane fade mt-3">
                                    <div class="form-group">
                                        <label for="">Создать категорию</label>
                                        <input type="text" class="form-control" name="categoryRu">
                                    </div>
                                </div>
                                <div id="en" class="container tab-pane fade mt-3">
                                    <div class="form-group">
                                        <label for="">Create category</label>
                                        <input type="text" class="form-control" name="categoryEn">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="hidden" name="_csrf" value="<%= csrf %>">
                                <button type="submit" class="btn btn-primary">Create</button>
                            </div>
                        </form>

                        <div class="colors">
                            <h4>All Colors</h4>
                            <% color.forEach(i => {%>
                            <div class="all-prod-box-color" style="background: <%= i.color %>;"></div>
                            <%}) %>

                        </div>

                        <form action="/admin-settings/colors" method="POST" class="form-group mb-5 mt-5">
                            <div class="form-group">
                                <label for="" class="color">Enter the color name in English *</label>
                                <input type="text" name="color" class="form-control">
                            </div>
                            <input type="hidden" name="_csrf" value="<%= csrf %>">
                            <button class="btn btn-primary" type="submit">Add</button>
                        </form>

                        <hr>

                        <form action="/admin-settings/condition" method="POST" class="form-group mb-5 mt-5">
                            <div class="form-group">
                                <label for="">
                                    <h4>Condition</h4>
                                </label>

                            </div>
                            <ul class="nav nav-tabs mt-5">
                                <li class="nav-item">
                                    <a class="nav-link active" data-toggle="tab" href="#hy3">HY</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="tab" href="#ru3">RU</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="tab" href="#en3">EN</a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div id="hy3" class="container tab-pane active mt-3">
                                    <div class="form-group">
                                        <label for="">Պայմաններ</label>
                                        <textarea name="conditionHy"
                                            class="form-control"><%= condition[0].conditionHy %></textarea>
                                    </div>
                                </div>
                                <div id="ru3" class="container tab-pane fade mt-3">
                                    <div class="form-group">
                                        <label for="">Условия</label>
                                        <textarea name="conditionRu"
                                            class="form-control"><%= condition[0].conditionRu %></textarea>
                                    </div>
                                </div>
                                <div id="en3" class="container tab-pane fade mt-3">
                                    <div class="form-group">
                                        <label for="">Condition</label>
                                        <textarea name="conditionEn"
                                            class="form-control"><%= condition[0].conditionEn %></textarea>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <input type="hidden" name="id" value="<%= condition[0].id %>">
                                    <input type="hidden" name="_csrf" value="<%= csrf %>">
                                    <button type="submit" class="btn btn-primary">Change</button>
                                </div>
                            </div>
                        </form>

                    </div>
                    <!-- <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div> -->
                </div>
            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="/register/logout">Logout</a>
                </div>
            </div>
        </div>
    </div>


    <!-- Bootstrap core JavaScript-->
    <script src="/admin/vendor/jquery/jquery.min.js"></script>
    <script src="/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/admin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Page level plugin JavaScript-->
    <script src="/admin/vendor/datatables/jquery.dataTables.js"></script>
    <script src="/admin/vendor/datatables/dataTables.bootstrap4.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/admin/js/sb-admin.min.js"></script>

    <!-- Demo scripts for this page-->
    <script src="/admin/js/demo/datatables-demo.js"></script>

    <script src="/admin//js/script.js" type="text/javascript"></script>
</body>

</html>