<%- include('layouts/header') %>

<!-- Page Title START -->
<div class="page-title-section" style="background-image: url(img/bg/header-bg-4.jpg">
    <div class="container">
        <h1><%= __('links.contact') %></h1>
        <ul>
            <li><a href="/"><%= __('links.home') %></a></li>
            <li><a href=""><%= __('links.contact') %></a></li>
        </ul>
    </div>
</div>
<!-- Page Title END -->

<!-- Contact Boxes START -->
<div class="section-block-grey">
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-sm-6 col-12">
                <div class="contact-box">
                    <i class="fa fa-phone-square"></i>
                    <h4><%= __('contactUs.call') %></h4>
                    <span><%= contact[0].phone %></span>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 col-12">
                <div class="contact-box">
                    <i class="fa fa-map"></i>
                    <h4><%= __('contactUs.visit') %></h4>
                    <span>Argavand Cemetery</span>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 col-12">
                <div class="contact-box">
                    <i class="fa fa-envelope"></i>
                    <h4><%= __('contactUs.mail') %></h4>
                    <span><%= contact[0].email %></span>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 col-12">
                <div class="contact-box">
                    <i class="fa fa-comments-o"></i>
                    <h4><%= __('contactUs.chat') %></h4>
                    <span>մենք աշխատում ենք 24/7</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact Boxes END -->




<!-- Contact Form Section START -->
<div class="section-block">
    <div class="container">
        <div class="section-heading center-holder">
            <span><%= __('contactUs.text_1') %></span>
            <h3><%= __('contactUs.text_2') %></h3>
            <div class="section-heading-line"></div>
        </div>
        <div class="mt-50">
            <div class="contact-form-box">
                <!-- Form Start -->
                <form class="contact-form row">
                    <div class="col-md-6 col-sm-6 col-12">
                        <input type="text" name="name" placeholder="<%= __('contactUs.input.name') %>">
                    </div>
                    <div class="col-md-6 col-sm-6 col-12">
                        <input type="email" name="email" placeholder="<%= __('contactUs.input.email') %>">
                    </div>

                    <div class="col-md-12">
                        <input type="text" name="subject" placeholder="<%= __('contactUs.input.subject') %>">
                    </div>

                    <div class="col-md-12">
                        <textarea name="message" placeholder="<%= __('contactUs.input.message') %>"></textarea>
                    </div>
                    <div class="col-md-12">
                        <div class="center-holder">
                            <button type="submit"><%= __('contactUs.input.send') %></button>
                        </div>
                    </div>
                </form>
                <!-- Form End -->
            </div>
        </div>
    </div>
</div>
<!-- Contact Form Section END -->





