                <div class="col-lg-9 col-md-6 col-xs-12">
                    <div class="blog-list-left">
                        <div class="row mt-50">
                            <!-- hy -->
                            <% if(locale === 'hy') {%>
                            <% sale.forEach(i => {%>
                            <div class="col-lg-6 col-md-12 col-12 <%= i.categoryEn %>">
                                <% if(i.news){%>
                                <div class="sale-box">
                                    <span>Նոր</span>
                                </div>
                                <%} %>

                                <div class="all-prod-box">
                                    <div class="heart-box">
                                        <i class="icon-line-awesome-heart-o"></i>
                                    </div>
                                    <!-- <a href="#"> -->
                                    <div class="all-prod-box-img">
                                        <div class="item_img all-prod-box-img-h">
                                            <% i.avatar.forEach(j => {%>
                                            <img src="uploads/<%= j %>">
                                            <%}) %>
                                        </div>
                                    </div>
                                    <!-- </a> -->
                                    <div class="all-prod-box-info">
                                        <h6> <span>Կոդ :</span> <%= i.code %></h6>
                                        <a href="#">
                                            <h5><%= i.titleHy %></h5>
                                        </a>
                                        <div class="all-prod-box-info-color">
                                            <h5>Գույն:</h5>
                                            <p><%= i.colorHy %></p>
                                        </div>
                                        <div class="all-prod-box-info-button">
                                            <a href="/shop-single/<%=i.id%>">Ավելին </a>
                                            <h4><%= i.price %> &#1423</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <%}) %>
                            <%} %>

                            <!-- ru -->
                            <% if(locale === 'ru') {%>
                            <% sale.forEach(i => {%>
                            <div class="col-lg-6 col-md-12 col-12 <%= i.categoryEn %>">
                                <% if(i.news){%>
                                <div class="sale-box">
                                    <span>Новый</span>
                                </div>
                                <%} %>
                                <div class="all-prod-box">
                                    <div class="heart-box">
                                        <i class="icon-line-awesome-heart-o"></i>
                                    </div>
                                    <!-- <a href="#"> -->
                                    <div class="all-prod-box-img">
                                        <div class="item_img all-prod-box-img-h">
                                            <% i.avatar.forEach(j => {%>
                                            <img src="uploads/<%= j %>">
                                            <%}) %>
                                        </div>
                                    </div>
                                    <!-- </a> -->
                                    <div class="all-prod-box-info">
                                        <h6> <span>Код :</span> <%= i.code %></h6>
                                        <a href="#">
                                            <h5><%= i.titleRu %></h5>
                                        </a>
                                        <div class="all-prod-box-info-color">
                                            <h5>Цвет:</h5>
                                            <p><%= i.colorRu %></p>
                                        </div>
                                        <div class="all-prod-box-info-button">
                                            <a href="/shop-single/<%=i.id%>">Подробное </a>
                                            <h4><%= i.price %> &#1423</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <%}) %>
                            <%} %>

                            <!-- en -->
                            <% if(locale === 'en') {%>
                            <% sale.forEach(i => {%>
                            <div class="col-lg-6 col-md-12 col-12 <%= i.categoryEn %>">
                                <% if(i.news){%>
                                    <div class="sale-box">
                                        <span>New</span>
                                    </div>
                                    <%} %>
                                <div class="all-prod-box">
                                    <div class="heart-box">
                                        <i class="icon-line-awesome-heart-o"></i>
                                    </div>
                                    <!-- <a href="#"> -->
                                    <div class="all-prod-box-img">
                                        <div class="item_img all-prod-box-img-h">
                                            <% i.avatar.forEach(j => {%>
                                            <img src="uploads/<%= j %>">
                                            <%}) %>
                                        </div>
                                    </div>
                                    <!-- </a> -->
                                    <div class="all-prod-box-info">
                                        <h6> <span>Code :</span> <%= i.code %></h6>
                                        <a href="#">
                                            <h5><%= i.titleEn %></h5>
                                        </a>
                                        <div class="all-prod-box-info-color">
                                            <h5>Color:</h5>
