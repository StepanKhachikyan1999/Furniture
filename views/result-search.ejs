                    <div class="left-box">

                        <div class="header-section-name type-box">
                            <h4>Тип</h4>
                        </div>
                        <div class="type-box main-div clearfix">
                            <label class="type-name"><span>Все категории</span><strong>(3377)</strong>
                                <input type="checkbox" checked="checked">
                                <span class="checkmark-check"></span>
                            </label>

                            <% if(locale === 'hy') {%>
                            <% category.forEach(i => {%>
                            <label class="type-name"
                                id="<%= i.categoryEn %>"><span><%= i.categoryHy %></span><strong>(15)</strong>
                                <input type="checkbox" id="<%= i.categoryEn %>">
                                <span class="checkmark-check"></span>
                            </label>
                            <%}) %>
                            <%} %>
                            <% if(locale === 'ru') {%>
                            <% category.forEach(i => {%>
                            <label class="type-name"
                                id="<%= i.categoryEn %>"><span><%= i.categoryRu %></span><strong>(15)</strong>
                                <input type="checkbox" id="<%= i.categoryEn %>">
                                <span class="checkmark-check"></span>
                            </label>
                            <%}) %>

                            <%} %>
                            <% if(locale === 'en') {%>
