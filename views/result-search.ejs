                            <label class="type-name"
                                id="<%= i.categoryEn %>"><span><%= i.categoryEn %></span><strong>(15)</strong>
                                <input type="checkbox" id="<%= i.categoryEn %>">
                                <span class="checkmark-check"></span>
                            </label>
                            <%}) %>

                            <%} %>
                        </div>



                        <div class="header-section-name type-box">
                            <h4>Оплата</h4>
                        </div>

                        <div class="type-pay main-div">
                            <label class="type-pay-radio"><span>Наличные</span>
                                <input type="radio" checked="checked" name="radio">
                                <span class="checkmark-rad"></span>
                            </label>
                            <label class="type-pay-radio"><span>По кредиту</span>
                                <input type="radio" name="radio">
                                <span class="checkmark-rad"></span>
                            </label>
                        </div>

                        <!-- input type="number" -->
                        <div class="header-section-name type-box">
                            <h4>Цена</h4>
                        </div>

                        <div class="filter-price main-div">
                            <input type="number" name="min-price" placeholder="0 &ensp; ֏">
                            <input type="number" name="max-price" placeholder="100000 &ensp;֏">
                        </div>

                    </div>

                    <div class="search-box">
                        <a href="#" class=""> Искать </a>
                    </div>

                </div>
