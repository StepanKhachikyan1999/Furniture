<%- include('layouts/header') %>

<!-- Shop Single START -->
<div class="section-block mt-70 mb-50">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <!-- Product Images & Alternates -->
                <div class="product-images">
                    <!-- Begin Product Images Slider -->
                    <div class="main-img-slider">
                        <% sale.avatar.forEach(i => {%>
                        <figure>
                            <a href="#" data-size="1400x1400">
                                <img src="/uploads/<%= i %>" alt="img" />
                            </a>
                        </figure>
                        <%}) %>

                    </div>
                    <!-- End Product Images Slider -->
                    <!-- Begin product thumb nav -->
                    <ul class="thumb-nav">
                        <% sale.avatar.forEach(i => {%>
                        <li><img src="/uploads/<%= i %>" alt="product-thumb" /></li>
                        <%}) %>
                    </ul>
                    <!-- End product thumb nav -->
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="single-product">

                    <h2><%= sale.titleHy %></h2>
                    <!-- <div class="product-review-area">
							<i class="fa fa-star" aria-hidden="true"></i>
							<i class="fa fa-star" aria-hidden="true"></i>
							<i class="fa fa-star" aria-hidden="true"></i>
							<i class="fa fa-star" aria-hidden="true"></i>
							<i class="fa fa-star-half-o" aria-hidden="true"></i>

							<span>(1 customer review)</span>
						</div> -->

                    <!-- Price Start -->
                    <div class="single-product-price">

                        <h4><%= sale.price %>&nbsp;֏</h4>

                    </div>
                    <!-- Price End -->
                    <p><%= sale.infoHy %></p>



                    <!-- Quantity Form and Button Start -->
                    <form action="" data-cesta-feira-form>
                        <div class="quantity mt-30">
                            <input type="number" name="quantity" min="1" max="99" step="1" value="1" data-cesta-feira-attribute>
                        </div>
                        <input type="hidden" name="title" value="<%= sale.titleHy %>" data-cesta-feira-attribute="">
                        <input type="hidden" name="price" value="<%= sale.price %>" data-cesta-feira-attribute="">
                        <input type="hidden" name="avatar" value="<%= sale.avatar[0] %>" data-cesta-feira-attribute="">
                        <input type="hidden" name="id" value="<%= sale.id %>" data-cesta-feira-item-id>
                        <!-- <input type="submit" class="dark-pulse-button add-to-cart-button" value="Купить сейчас"/> -->
                        <button type="submit" class="dark-pulse-button add-to-cart-button">Купить сейчас</button>
                    </form>
                  
                    <!-- Quantity Form and Button End -->

                    <div class="product-categories">
                        <div class="display-b">
                            <span>Category: </span>
                            <ul>
                                <li><%= sale.categoryHy %></li>


                            </ul>
                        </div>
                        <div class="display-b">
                            <span>ID : </span>
                            <ul>
                                <li>AC <%= sale.code %></li>

                            </ul>
                        </div>

                    </div>

                    <!-- <div class="product-tags">
						<div class="display-b">
							<span>Product Tags: </span>
							<ul>
								<li><a href="#">Fiance</a></li>
								<li><a href="#">Books</a></li>
								<li><a href="#">Business</a></li>
								<li><a href="#">Strategy</a></li>
								<li><a href="#">Planning</a></li>
							</ul>							
						</div>											
					</div> -->

                    <div class="product-share mt-20">
                        <span>Share: </span>
                        <a href="#"><i class="fa fa-facebook"></i></a>
                        <a href="#"><i class="fa fa-twitter"></i></a>
                        <a href="#"><i class="fa fa-google-plus"></i></a>
                        <a href="#"><i class="fa fa-pinterest"></i></a>
                    </div>

                </div>
            </div>
        </div>

        <!-- Middle Part START -->
        <div class="row">
            <div class="col-md-12">
                <!-- Tabs Start -->
                <div class="shop-tabs">
                    <div class='tabs tabs_animate mt-70'>
                        <ul class="tab-menu left-holder">
                            <li><a href="#tab-1">Features </a></li>
                            <li><a href="#tab-2">Additional information</a></li>
                        </ul>

                        <!-- Tab 2 Start -->
                        <div id='tab-1' class="clearfix product-tab-body">
                            <h3>Features </h3>
                            <ul>
                                <li><span>Size:</span><%= sale.sizeHy %></li>
                                <li><span>Weight:</span><%= sale.weightHy %></li>
                                <li><span>Material:</span><%= sale.materialHy %></li>
                                <li><span>Color:</span><%= sale.colorHy %></li>
                            </ul>
                        </div>
                        <!-- Tab 2 End -->

                        <!-- Tab 1 Start -->
                        <div id='tab-2' class="clearfix product-tab-body">
                            <h3>Additional information</h3>

                            <p><%= sale.more_infoHy %></p>

                        </div>
                        <!-- Tab 1 End -->
                    </div>
                </div>
                <!-- Tabs End -->
            </div>
        </div>
        <!-- Middle Part END -->
    </div>
</div>
<!-- Shop Single END -->

<%- include('layouts/footer') %>